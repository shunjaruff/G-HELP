      link(href='default_ie6.css', rel='stylesheet', type='text/css')
  body
    #wrapper
      #header-wrapper
        #header.container
          #logo
            h1
              img(src='images/logo2.png', alt='', width='70', height='70')
              
              
              
          #menu
            ul
              li.active
                a(href='home', accesskey='1', title='') Homepage
              
      

          ul.actions
            
             
      
      #extra.container
        .title
          h2 Your Mentee
          
        #three-column
          .boxA

            -for(var i =0; i < data.mentee.length; i++)
               br
               br
              
               p <strong>Mentee Name:</strong> #{data.mentee[i].firstName} #{data.mentee[i].lastName}
               p <strong>Mentee ID :</strong>       #{data.mentee[i]._id}
               p <strong>Program :</strong> #{data.mentee[i].program}
               p <strong>Mobile :</strong> #{data.mentee[i].mobile}
               p <strong>Email :</strong> #{data.mentee[i].username}
          .boxC
            -for(var i =0; i < data.mentee.length; i++)
              
              br
              br
              p
              img(src='images/userpicture/#{data.mentee[i]._id}.jpg', alt='', width='150', height='200')   
            
          
                     
                
        
    