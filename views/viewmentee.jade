html(xmlns='http://www.w3.org/1999/xhtml')
  head
    
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title='View Mentee'
    meta(name='keywords', content='')
    meta(name='description', content='')
    link(href='http://fonts.googleapis.com/css?family=Varela', rel='stylesheet')
    
    script(type='text/javascript', src='/javascripts/jquery-1.9.1.min.js')
    script(type='text/javascript', charset='utf-8', src='/javascripts/jquery.leanModal.min.js')
    link(href='/stylesheets/firstpage.css', rel='stylesheet', type='text/css', media='all')
    link(href='/stylesheets/firstpagefonts.css', rel='stylesheet', type='text/css', media='all')
    
