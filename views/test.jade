html
  head
    title=title
    link(
      href='/stylesheets/my.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Assign Mentor

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Registration Successfull! 
      form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
          label.col-sm-4 New Student
          div.col-sm-8
            select(single='', name='mentor', size='4',required=true,style='width: 200px')
             option(value='1') New Student1
             option(value='2') New Student2
             option(value='3') New Student3
             option(value='4') New Student4
             option(value='5') New Student5
             option(value='6') New Student6
             option(value='7') New Student7
             option(value='8') New Student8
             option(value='9') New Student9
              div.col-sm-offset-0
            p please select a student from above list. 
            p 'Preference(s) given by new student.'
             textarea.form-control(rows="4", style='width:300px', readonly='')
             
         div.form-group
          label.col-sm-4 Mentor
          div.col-sm-8
            select(single='', name='mentor', size='4',required=true,style='width: 200px')
             option(value='1') Mentor 1
             option(value='2') Mentor 2
             option(value='3') Mentor 3
             option(value='4') Mentor 4
             option(value='5') Mentor 5
             option(value='6') Mentor 6
             option(value='7') Mentor 7
             option(value='8') Mentor 8
             option(value='9') Mentor 9
              div.col-sm-offset-0
            p please select a mentor to assign from above list. 
            p 'Preference(s) given by mentor.'
             textarea.form-control(rows="4", style='width:300px', readonly='')
        
    
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Assign
        div.pull-right
          a(href="/ghelp") Return to home page