html
  head
    title=title
    link(
      href='/stylesheets/my.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Host Family Registration

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Registration Successfull! 
      form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
          label.col-sm-4 First Name
          div.col-sm-8
            input.form-control(
              placeholder='Your first name',
              required=true,
              name='givenName',
              type='text',
              value=givenName,
              style='width: 300px',
              )
        
        div.form-group
          label.col-sm-4 Last Name
          div.col-sm-8
            input.form-control(placeholder='Your last name',
              required=true,
              name='surname',
              type='text',
              style='width: 300px',
              value=surname)
        
           
        div.form-group
          label.col-sm-4 Email
          div.col-sm-8
            input.form-control(placeholder='example@example.com',
              required=true,
              name='email',
              type='email',
              style='width: 300px',
              value=email)      
        div.form-group
          label.col-sm-4 Cellphone
          div.col-sm-8
            input.form-control(placeholder='Cellphone Number',
              required=true,
              name='cellphone',
              type='number',
              style='width: 300px',
              value=cellphone)
        
         div.form-group
          label.col-sm-4 Preference
          div.col-sm-8
           textarea.form-control(rows="4", placeholder="Please let us know your preference", style='width:300px')
                 
         
        
            
         div.form-group
          label.col-sm-4 Address
          div.col-sm-8
           textarea.form-control(rows="4", placeholder="Please provide your address", style='width:300px')
            
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Submit
        div.pull-right
          a(href="/ghelp") Return to home page
    