  body
    #wrapper
      #header-wrapper
        #header.container
          #logo
            h1
              img(src='images/logo2.png', alt='', width='70', height='70')
              if (user)
              
              
          #menu
            ul
              li.active
                a(href='home', accesskey='1', title='') Homepage
              li
                a(href='/viewevent', accesskey='2', title='') Events
              li
                a(href='/viewcourse', accesskey='2', title='') Courses  
              li
                a(href='http://my.mun.ca', accesskey='4', title='') myMUN
              li
                a(href='/logout', accesskey='5', title='') Logout
      

          ul.actions
            
             
      
      #extra.container
        .title
          h2 My Profile
          
        #three-column
          .boxA

           
            if(user)
              p <strong>Student Name:</strong> #{user.firstName} #{user.lastName}
              p <strong>Student ID :</strong>       #{user._id}
              p <strong>Program :</strong> #{user.program}
              p <strong>Mobile :</strong> #{user.mobile}
              p <strong>Current Semester :</strong> #{user.semester}
            if (user.semester < 3)
             if(user.mentor==null)
              p <strong>Mentor :</strong> Not yet assigned!
             else
              p <strong>Mentor :</strong>  
               a(href="/viewmentor")= user.mentor
            if (user.semester > 2)
              p <strong>Mentee :</strong>  
               a(href="/viewmentee") View   

            if (user.semester < 3)
             if(user.hostFamily=="") 
              p <strong>Host Family :</strong> Not yet assigned!
             else
              p <strong>Host Family :</strong> 
               a(href="/viewhost") View 
          
          .boxC
            .box
              img(src='images/userpicture/#{user._id}.jpg', alt='', width='200', height='300') 

            
            
             if(user.assigned==false)
              if(user.semester>2)
               a.button(href='registermentor') Become A Mentor           
                
        
    #copyright.container
      p You Are Logged In as <strong>#{user.firstName} #{user.lastName}</strong>